<div class="scrollable">
	<div class="container-fluid">
		<div class="row">
			<div class="media-options" style="margin-left: 1%; margin-top: 1%;">
				<div style="visibility: hidden">{{>admin_media_upload}}</div>
				<a href="/admin-media"><i class="fas fa-cloud-upload-alt"></i> Go to upload</a>
				<button type="submit" class="btn btn-primary" id="use"><i class="fas fa-arrows-alt"></i> Use Selected</button>
				<button type="submit" class="btn btn-primary" id="delete"><i class="fas fa-trash-alt"></i> Delete Selected</button>
				<button type="submit" class="btn btn-primary" id="refresh" style="background: #620CE8;"><i class="fas fa-sync-alt"></i> Refresh Media</button>
				<p class="count">0 selected items</p>
			</div>
		</div>
		<div class="row">
			{{#each medias}}
				<div class="col-xs-4 col-sm-4 col-lg-3">
					<img src="/medias/{{_id}}" id="{{_id}}" class="cropmedia">
					<h5 class="text-center">{{filename}}</h5>
					<p class="text-center">{{alt}}</p>
				</div>
			{{/each}}
		</div>
	</div>
</div>
<script src="/js/admin/admin_media.js"></script>