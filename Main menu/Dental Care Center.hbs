
* {
    box-sizing: border-box;

body, html {
    height: 100%;
    margin: 0;

}
}
*{
    margin: auto;
    padding: 0;
    font-family: "Century Gothic";


}

header{
	
	justify-content:flex-end;
    height: 100%;
    background-image: url(photo.jpg);
    height: 100vh;
    width: 100%;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center center;
    background-attachment: fixed;
	overflow:hidden;


}

ul{

    float: right;
    list-style-type: none;
    margin-top: 10px;
	margin-right: -140px
	 display: flex;
  justify-content:flex-end;
	 margin-right:auto;


}

ul li{
    display: inline-block;
	 
  justify-content: center;

}

ul li a{
 
    text-decoration: none;
    color: #f4f0ff;
    padding: 5px 30px;
    border: 2px solid #FFFAFA;
    margin-left: 3px;
    transition: 0.4s linear;
	 display: flex;
  justify-content: center;


}

ul li a:hover{
    background-color: #fff;
    color: #000;


}

.logo img{
	
    float: left;
    width: 190px;
    height: 90px;

    margin-left:auto;
	
	order:3;

}

.main{
    max-width: 1200px;
    margin: auto;
}
.title{
 
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    margin: auto;
    text-align: center;
	 text-shadow: 3px 2px #021f31   ;

}

.title h1{
	 
 

    color: 	#FFFAFA;
    font-size: 55px;
    font-family: "Comic Sans MS";
    margin: auto;
	 display: flex;
  justify-content:flex-end;
	
}

.button{
 

    position: absolute;
    top: 61%;
    left: 50%;
    transform: translate(-50%, -50%);
	cursor:pointer;
	 display: flex;
  justify-content:flex-end;
	 margin-right:auto;
}

.btn{

    border: 2px solid #FFFAFA;
    padding: 5px 30px;
    margin-left: 3px;
    text-decoration: none;
    color: #f4f0ff;
    transition: 0.4s linear;
	 display: flex;
  justify-content:flex-end;
	 margin-right:auto;
}

.btn:hover{
    background-color: #fff;
    color: #000;
}

.paragraph p{
    border: 2px solid #FFF8DC;
    padding: 0px ;
    margin-left: 3px;
    text-align: center;
    position: fixed;



    position : absolute;

}



.pic img{

    width: 800px;
    height: 450px;
    display:block;
    margin-left: auto;
    margin-right: auto;
}

